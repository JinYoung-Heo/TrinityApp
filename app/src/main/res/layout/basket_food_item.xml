<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/basket_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:clickable="false"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/foodIcon"
        app:layout_constraintBottom_toBottomOf="@id/foodIcon"
        app:layout_constraintRight_toLeftOf="@id/foodIcon"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <View
        android:id="@+id/view1"
        android:layout_width="0dp"
        android:layout_height="125dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/basket_check_box"/>

    <ImageView
        android:id="@+id/foodIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/view1"
        android:layout_marginLeft="21dp"/>

    <TextView
        android:id="@+id/foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="재료명"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/view1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="82dp"/>

    <EditText
        android:theme="@style/EditTheme"
        android:id="@+id/foodNameEditText"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/foodName"
        app:layout_constraintBottom_toBottomOf="@id/foodName"
        app:layout_constraintLeft_toLeftOf="@id/view1"
        android:layout_marginLeft="146dp"
        android:textColor="#333333"
        android:textCursorDrawable="@drawable/text_cursor"/>

    <TextView
        android:id="@+id/quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="수량"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/view1"
        android:layout_marginTop="55dp"
        android:layout_marginLeft="82dp"/>

    <ImageButton
        android:id="@+id/minusBtn"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/minus_btn"
        app:layout_constraintTop_toTopOf="@id/quantity"
        app:layout_constraintBottom_toBottomOf="@id/quantity"
        app:layout_constraintLeft_toLeftOf="@id/view1"
        android:layout_marginLeft="146dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="#FFFFFF"/>

    <TextView
        android:id="@+id/quantityTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/minusBtn"
        app:layout_constraintRight_toRightOf="@id/plusBtn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageButton
        android:id="@+id/plusBtn"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/plus_btn"
        app:layout_constraintTop_toTopOf="@id/quantity"
        app:layout_constraintBottom_toBottomOf="@id/quantity"
        app:layout_constraintLeft_toLeftOf="@id/view1"
        android:layout_marginLeft="198dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:background="#FFFFFF"/>

    <TextView
        android:id="@+id/whereToStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보관장소"
        android:textColor="#666666"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/view1"
        android:layout_marginTop="89.5dp"
        android:layout_marginLeft="82dp"/>

    <RadioGroup
        android:id="@+id/radio_group"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/view1"
        android:layout_marginTop="86.5dp"
        android:layout_marginLeft="146dp"
        android:layout_marginRight="86dp"
        app:layout_constraintRight_toRightOf="parent"
        android:weightSum="17"
        >
        <RadioButton
            android:text="선반"
            android:id="@+id/radio_btn1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@drawable/radio_text_selector"
            android:background="@drawable/radio_button_selector"
            android:button="@android:color/transparent"
            android:layout_gravity="center_horizontal" />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            />
        <RadioButton
            android:text="냉장"
            android:textSize="16sp"
            android:id="@+id/radio_btn2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textAlignment="center"
            android:textColor="@drawable/radio_text_selector"
            android:background="@drawable/radio_button_selector"
            android:button="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:checked="true"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            />
        <RadioButton
            android:text="냉동"
            android:textSize="16sp"
            android:id="@+id/radio_btn3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textAlignment="center"
            android:textColor="@drawable/radio_text_selector"
            android:background="@drawable/radio_button_selector"
            android:button="@android:color/transparent"
            android:layout_gravity="center_horizontal" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="13dp"
        android:background="@drawable/category_underline"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/buyButton"
        android:layout_width="36dp"
        android:layout_height="45dp"
        android:src="@drawable/buy_button"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>