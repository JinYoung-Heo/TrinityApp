<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TimePicker
        android:id="@+id/myTimePicker"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </TimePicker>

    <Button
        android:id="@+id/dialogCancelButton"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@id/myTimePicker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dialogSaveButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_textview"
        android:text="취소"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/dialogSaveButton"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@id/myTimePicker"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dialogCancelButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_textview"
        android:text="저장"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>