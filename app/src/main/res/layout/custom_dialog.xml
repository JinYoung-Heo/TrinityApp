<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_view_white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/dialogTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#666666"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="35dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/dialogTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장바구니에 담아둘까요?"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/dialogTextView1"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/dialogYesButton"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@id/dialogTextView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/dialogNoButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="31dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_textview"
        android:text="YES"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/dialogNoButton"
        android:layout_width="0dp"
        android:layout_height="32dp"
        app:layout_constraintTop_toBottomOf="@id/dialogTextView2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/dialogYesButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="31dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_textview"
        android:text="NO"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>