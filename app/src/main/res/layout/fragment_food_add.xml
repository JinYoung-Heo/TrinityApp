<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#95aed7"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_part"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="34dp"
            android:background="@drawable/main_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/add_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="재료 등록"
            android:textColor="#333333"
            app:layout_constraintTop_toTopOf="@id/view1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="19dp"
            />
        <ImageButton
            android:id="@+id/base_back_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="@+id/view1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:background="@android:color/transparent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="19dp"
            />
        <ScrollView
            app:layout_constraintBottom_toTopOf="@id/add_food_btn"
            app:layout_constraintTop_toBottomOf="@id/add_main_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="13dp"
            android:background="@color/white">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageButton
                    android:id="@+id/go_to_select_button"
                    android:layout_width="94dp"
                    android:layout_height="94dp"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="19dp"
                    android:src="@drawable/plus"
                    />

                <View
                    android:id="@+id/line"
                    android:layout_width="0dp"
                    android:layout_height="0.5dp"
                    android:background="#cccccccc"
                    app:layout_constraintTop_toBottomOf="@id/go_to_select_button"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="19.5dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    />


                <TextView
                    android:id="@+id/food_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="재료명"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/line"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="22.5dp"
                    android:layout_marginLeft="48dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingRight="4dp"
                    android:clipToPadding="false"
                    app:layout_constraintTop_toTopOf="@id/food_name"
                    app:layout_constraintBottom_toBottomOf="@id/food_name"
                    app:layout_constraintLeft_toRightOf="@id/food_name">

                </RelativeLayout>

                <EditText
                    android:theme="@style/EditTheme"
                    android:background="@android:color/transparent"
                    android:elevation="2dp"
                    android:id="@+id/food_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="재료 이름을 입력해주세요"
                    app:layout_constraintTop_toTopOf="@id/food_name"
                    app:layout_constraintBottom_toBottomOf="@id/food_name"
                    app:layout_constraintLeft_toRightOf="@id/food_name"
                    android:layout_marginLeft="76dp"
                    android:textSize="12sp"
                    android:textColor="#333333"/>
                <!--<EditText
                    android:id="@+id/food_place"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    app:layout_constraintTop_toBottomOf="@id/food_edit_text"
                    app:layout_constraintBottom_toTopOf="@id/radio_group"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginHorizontal="50dp"
                    android:textSize="30sp"
                    android:textAlignment="center"
                    android:gravity="center"/>-->

                <TextView
                    android:id="@+id/store_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보관장소"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/food_name"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="42dp"
                    android:layout_marginLeft="48dp"
                    />
                <RadioGroup
                    android:id="@+id/radio_group"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/store_location"
                    app:layout_constraintBottom_toBottomOf="@id/store_location"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="@id/food_edit_text"
                    android:layout_marginRight="77dp"
                    android:weightSum="17"
                    >
                    <RadioButton
                        android:text="선반"
                        android:id="@+id/radio_btn1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="@drawable/radio_text_selector"
                        android:background="@drawable/radio_button_selector"
                        android:button="@android:color/transparent"
                        android:layout_gravity="center_horizontal" />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"
                        />
                    <RadioButton
                        android:text="냉장"
                        android:textSize="16sp"
                        android:id="@+id/radio_btn2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:textAlignment="center"
                        android:textColor="@drawable/radio_text_selector"
                        android:background="@drawable/radio_button_selector"
                        android:button="@android:color/transparent"
                        android:layout_gravity="center_horizontal"
                        />
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:layout_weight="1"
                        />
                    <RadioButton
                        android:text="냉동"
                        android:textSize="16sp"
                        android:id="@+id/radio_btn3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:textAlignment="center"
                        android:textColor="@drawable/radio_text_selector"
                        android:background="@drawable/radio_button_selector"
                        android:button="@android:color/transparent"
                        android:layout_gravity="center_horizontal" />
                </RadioGroup>


                <TextView
                    android:id="@+id/food_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수량"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/store_location"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="42dp"
                    android:layout_marginLeft="48dp"
                    />
                <EditText
                    android:inputType="number"
                    android:theme="@style/EditTheme"
                    android:id="@+id/food_number_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="재료 수량을 입력해주세요"
                    android:background="@android:color/transparent"
                    app:layout_constraintTop_toTopOf="@id/food_number"
                    app:layout_constraintBottom_toBottomOf="@id/food_number"
                    app:layout_constraintLeft_toLeftOf="@id/food_edit_text"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:gravity="center"/>


                <TextView
                    android:id="@+id/purchase_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="구매일자"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/food_number"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="42dp"
                    android:layout_marginLeft="48dp"
                    />

                <TextView
                    android:id="@+id/purchase_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="@id/food_number_edit_text"
                    app:layout_constraintTop_toTopOf="@id/purchase_date"
                    app:layout_constraintBottom_toBottomOf="@id/purchase_date"
                    />

                <ImageButton
                    android:id="@+id/purchase_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_baseline_date_range_24"
                    app:layout_constraintLeft_toRightOf="@id/food_number_edit_text"
                    app:layout_constraintTop_toTopOf="@id/purchase_date"
                    app:layout_constraintBottom_toBottomOf="@id/purchase_date"
                    />

                <TextView
                    android:id="@+id/expiration_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="유통기한"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/purchase_date"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="48dp"
                    />

                <TextView
                    android:id="@+id/expiration_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="12sp"
                    app:layout_constraintLeft_toLeftOf="@id/food_number_edit_text"
                    app:layout_constraintTop_toTopOf="@id/expiration_date"
                    app:layout_constraintBottom_toBottomOf="@id/expiration_date"
                    />
                <ImageButton
                    android:id="@+id/expiration_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_baseline_date_range_24"
                    app:layout_constraintLeft_toRightOf="@id/food_number_edit_text"
                    app:layout_constraintTop_toTopOf="@id/expiration_date"
                    app:layout_constraintBottom_toBottomOf="@id/expiration_date"
                    />
                <TextView
                    android:id="@+id/memo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="메모"
                    android:textSize="12sp"
                    app:layout_constraintTop_toBottomOf="@id/expiration_date"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="41dp"
                    android:layout_marginLeft="48dp"
                    />

                <EditText
                    android:theme="@style/EditTheme"
                    android:background="@android:color/transparent"
                    android:id="@+id/memo_edit_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="메모하실 내용을 입력해주세요"
                    app:layout_constraintTop_toTopOf="@id/memo"
                    android:textColor="#333333"
                    app:layout_constraintLeft_toLeftOf="@id/food_number_edit_text"
                    android:textSize="12sp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="13dp"
                    app:layout_constraintTop_toBottomOf="@id/memo_edit_text"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <Button
            android:id="@+id/add_food_btn"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="13dp"
            android:background="@drawable/button_background2"
            android:gravity="center"
            android:text="등록하기"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@id/base_back_button"
            app:layout_constraintBottom_toBottomOf="@id/base_back_button"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="5.6dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
