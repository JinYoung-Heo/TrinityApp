<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"

        >
        <ImageButton
            android:id="@+id/base_back_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitCenter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            android:background="@android:color/transparent"
            android:layout_marginLeft="20dp"
            />
        <Button
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@id/base_back_button"
            app:layout_constraintBottom_toBottomOf="@id/base_back_button"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="5.6dp"
            />

        <TextView
            android:id="@+id/add_main_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="재료 정보"
            android:textColor="#333333"
            app:layout_constraintTop_toTopOf="@id/base_back_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/add_main_text"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/go_to_select_button"
                android:layout_width="94dp"
                android:layout_height="94dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:src="@drawable/plus"
                android:layout_marginTop="10dp"
                />

            <View
                android:id="@+id/line"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:background="#cccccccc"
                app:layout_constraintTop_toBottomOf="@id/go_to_select_button"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="19.5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:id="@+id/food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재료명"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/line"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="22.5dp"
                android:layout_marginLeft="48dp"
                />
            <EditText
                android:textColor="#333333"
                android:theme="@style/EditTheme"
                android:background="@android:color/transparent"
                android:elevation="2dp"
                android:id="@+id/food_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="재료 이름을 입력해주세요"
                app:layout_constraintTop_toTopOf="@id/food_name"
                app:layout_constraintBottom_toBottomOf="@id/food_name"
                app:layout_constraintLeft_toRightOf="@id/food_name"
                android:layout_marginLeft="76dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/store_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보관장소"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/food_name"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="48dp"
                />
            <RadioGroup
                android:id="@+id/radio_group"
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/store_location"
                app:layout_constraintBottom_toBottomOf="@id/store_location"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="@id/food_edit_text"
                android:layout_marginRight="77dp"
                android:weightSum="17"
                >
                <RadioButton
                    android:text="선반"
                    android:id="@+id/radio_btn1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textColor="@drawable/radio_text_selector"
                    android:background="@drawable/radio_button_selector"
                    android:button="@android:color/transparent"
                    android:layout_gravity="center_horizontal" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    />
                <RadioButton
                    android:text="냉장"
                    android:textSize="16sp"
                    android:id="@+id/radio_btn2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textAlignment="center"
                    android:textColor="@drawable/radio_text_selector"
                    android:background="@drawable/radio_button_selector"
                    android:button="@android:color/transparent"
                    android:layout_gravity="center_horizontal"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    />
                <RadioButton
                    android:text="냉동"
                    android:textSize="16sp"
                    android:id="@+id/radio_btn3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:textAlignment="center"
                    android:textColor="@drawable/radio_text_selector"
                    android:background="@drawable/radio_button_selector"
                    android:button="@android:color/transparent"
                    android:layout_gravity="center_horizontal" />
            </RadioGroup>

            <TextView
                android:id="@+id/food_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수량"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/store_location"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="48dp"
                />
            <TextView
                android:id="@+id/food_number_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/food_number"
                app:layout_constraintBottom_toBottomOf="@id/food_number"
                app:layout_constraintLeft_toRightOf="@id/numMinus_button"
                app:layout_constraintRight_toLeftOf="@id/numPlus_button"
                android:textSize="12sp"
                android:textAlignment="center"
                android:gravity="center"/>

            <ImageButton
                android:id="@+id/numMinus_button"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="@id/food_number"
                app:layout_constraintBottom_toBottomOf="@id/food_number"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="159dp"
                android:src="@drawable/nm"/>
            <ImageButton
                android:id="@+id/numPlus_button"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:layout_constraintTop_toTopOf="@id/food_number"
                app:layout_constraintBottom_toBottomOf="@id/food_number"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="133dp"
                android:src="@drawable/np"/>
            <TextView
                android:id="@+id/purchase_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="구매일자"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/food_number"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="42dp"
                android:layout_marginLeft="48dp"
                />

            <TextView
                android:textColor="#333333"
                android:id="@+id/purchase_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@id/food_edit_text"
                app:layout_constraintTop_toTopOf="@id/purchase_date"
                app:layout_constraintBottom_toBottomOf="@id/purchase_date"
                />

            <ImageButton
                android:id="@+id/purchase_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_date_range_24"
                app:layout_constraintLeft_toRightOf="@id/radio_group"
                app:layout_constraintTop_toTopOf="@id/purchase_date"
                app:layout_constraintBottom_toBottomOf="@id/purchase_date"
                />

            <TextView
                android:id="@+id/expiration_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="유통기한"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/purchase_date"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="48dp"
                />

            <TextView
                android:textColor="#333333"
                android:id="@+id/expiration_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="12sp"
                app:layout_constraintLeft_toLeftOf="@id/food_edit_text"
                app:layout_constraintTop_toTopOf="@id/expiration_date"
                app:layout_constraintBottom_toBottomOf="@id/expiration_date"
                />
            <ImageButton
                android:id="@+id/expiration_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_baseline_date_range_24"
                app:layout_constraintLeft_toRightOf="@id/radio_group"
                app:layout_constraintTop_toTopOf="@id/expiration_date"
                app:layout_constraintBottom_toBottomOf="@id/expiration_date"
                />

            <TextView
                android:id="@+id/use_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소비기한"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/expiration_date"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="48dp"
                />

            <EditText
                android:background="@android:color/transparent"
                android:id="@+id/use_date_text"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="-"
                android:textSize="12sp"
                android:textColor="#333333"
                app:layout_constraintTop_toTopOf="@id/use_date"
                app:layout_constraintLeft_toLeftOf="@id/food_edit_text"/>

            <TextView
                android:id="@+id/memo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="메모"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/use_date_text"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="41dp"
                android:layout_marginLeft="48dp"
                />

            <EditText
                android:theme="@style/EditTheme"
                android:background="@android:color/transparent"
                android:id="@+id/memo_edit_text"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="메모하실 내용을 입력해주세요"
                app:layout_constraintTop_toTopOf="@id/memo"
                app:layout_constraintLeft_toLeftOf="@id/food_edit_text"
                android:textSize="12sp"
                android:textColor="#333333"/>

            <View
                android:id="@+id/line2"
                android:layout_width="0dp"
                android:layout_height="10dp"
                android:background="#13323e52"
                app:layout_constraintTop_toBottomOf="@id/memo_edit_text"
                android:layout_marginTop="30dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/store_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보관방법"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/line2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="48dp"
                />
            <EditText
                android:theme="@style/EditTheme"
                android:background="@android:color/transparent"
                android:id="@+id/store_edit_text"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="-"
                app:layout_constraintTop_toBottomOf="@id/line2"
                app:layout_constraintLeft_toLeftOf="@id/food_edit_text"
                android:layout_marginTop="23dp"
                android:textSize="12sp"
                android:textColor="#333333"/>
            <TextView
                android:id="@+id/treat_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="처리방법"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/store_edit_text"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="48dp"
                />
            <EditText
                android:theme="@style/EditTheme"
                android:textColor="#333333"
                android:background="@android:color/transparent"
                android:id="@+id/treat_edit_text"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="-"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/store_edit_text"
                app:layout_constraintLeft_toLeftOf="@id/food_edit_text"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/recipe_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레시피 검색"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/treat_edit_text"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="42dp"
                android:layout_marginLeft="48dp"
                />
            <ImageButton
                android:id="@+id/youtube_button"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:layout_constraintLeft_toRightOf="@id/recipe_search"
                app:layout_constraintTop_toTopOf="@id/recipe_search"
                android:layout_marginLeft="52dp"
                android:src="@drawable/youtube"/>

            <ImageButton
                android:id="@+id/recipe10000_button"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:layout_constraintLeft_toRightOf="@id/youtube_button"
                app:layout_constraintTop_toTopOf="@id/recipe_search"
                android:layout_marginLeft="15dp"
                android:src="@drawable/mangae"/>

            <ImageButton
                android:id="@+id/google_button"
                android:layout_width="31dp"
                android:layout_height="31dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                app:layout_constraintLeft_toRightOf="@id/recipe10000_button"
                app:layout_constraintTop_toTopOf="@id/recipe_search"
                android:layout_marginLeft="15dp"
                android:src="@drawable/google"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintTop_toBottomOf="@id/google_button"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <WebView
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


</LinearLayout>